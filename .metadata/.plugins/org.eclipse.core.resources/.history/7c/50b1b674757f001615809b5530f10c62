#include "Project01.h"
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>

void type_prompt();
void read_command();
int status;
pid_t pid;

int main(void) {
	char* command[50];
	char* params[50];
	while (1){
		type_prompt();
		read_command(command, params);

		pid = fork();
		if(pid<0){
			printf("Unable to fork");
			continue;
		}
		if (pid != 0){
			waitpid(pid, &status, 0);
		}else{
			execvp(command, params);
		}
	}
	return 0;
}
