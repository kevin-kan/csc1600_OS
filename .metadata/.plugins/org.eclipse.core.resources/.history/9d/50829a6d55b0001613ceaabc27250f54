#include <stdio.h>
#include <stdlib.h>

void FileTest(int bufferSize){
	fprint("Reading from input file: 'lab5_input.txt'...");
	/* READING FROM FILE */
	infile.open("lab5_input.txt");
	if (infile.is_open()){								// Checks if file is really open
		long int i = 0;
		while(!infile.eof() && i < MAXSIZE){			// stops at end of file or if MAXSIZE reached
			infile >> arrB[i];
			arrM[i] = arrB[i];
			i++;
		}
		numLines = i - 1;
		cout << "numLines = " << numLines << endl;
		cout << "File Read Complete." << endl;
		infile.close();
		doneReading = true;
	}
	else{
		cout << "Failed to read from file." << endl;
		infile.close();
		return 0;
	}
}
