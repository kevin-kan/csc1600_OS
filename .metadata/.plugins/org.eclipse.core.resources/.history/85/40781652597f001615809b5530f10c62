#include "Project01.h"
#define MAX_CMD 256

static char cmd(MAX_CMD);

void read_command(char* cmd, char* params[]){
	char * commandcopy;
	char * token;
	const char delimiters[4] = " \n\r";
	int num_args = 0;

	setbuf(stdout, NULL);

	for( int i=0; i< i+1; ++i){
		if(params[i] == (char *)0) break;
		free(params[i]);
		params[i] = (char *)0;
		if (i>100){
			printf("inf loop");
			exit(-1);
		}
	}
	scanf("%s", cmd);
	if (strncmp(cmd, "quit", 256) == 0){
		printf("Exiting Program...");
	}
}



